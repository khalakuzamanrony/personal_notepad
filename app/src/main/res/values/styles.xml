<resources>

    <!-- Base application theme. -->
    <!-- Base Main Theme theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainColor">@color/mainColor</item>
        <item name="secondaryColor">@color/secondaryColor</item>
        <item name="mainBackground">@color/mainBackground</item>
        <item name="transparent">@color/transparent</item>
        <item name="border_bg">@color/border_bg</item>
        <item name="border_bg2">@color/border_bg2</item>
        <item name="placeholderColor">@color/placeholderColor</item>
        <item name="ABcolor">@color/ABcolor</item>


    </style>

    <!-- Base Main Dark theme. -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dcolorPrimary</item>
        <item name="colorPrimaryDark">@color/dcolorPrimaryDark</item>
        <item name="colorAccent">@color/dmainColor</item>
        <item name="mainColor">@color/dmainColor</item>
        <item name="secondaryColor">@color/dsecondaryColor</item>
        <item name="mainBackground">@color/dmainBackground</item>
        <item name="transparent">@color/dtransparent</item>
        <item name="border_bg">@color/dborder_bg</item>
        <item name="border_bg2">@color/dborder_bg2</item>
        <item name="placeholderColor">@color/dplaceholderColor</item>
        <item name="ABcolor">@color/dABcolor</item>

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@color/mainColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="ADBStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>
    <style name="NavView">
        <item name="android:textColorSecondary">?attr/border_bg</item>

    </style>
</resources>
